extends layout
block content
	div.row-fluid
	div.well
		label(for="lst_kategori") 
			strong İçerik Türü
		select#lst_kategori
			- ubsoptions.categories.forEach(function(itm){
				option #{itm}
			- })	
		a.btn.button.btn-primary(href="javascript:list()",style="margin-bottom:10px;") Listele
		a.btn.button.btn-success.pull-right(href="javascript:opennew()") Yeni Ekle
	div.row-fluid
		table.table.table-striped
			th.span5 Başlık
			th.span3 Konular
			th.span2 Tarih
			th.span2 #
			tbody#tbl
			
	div.modal.hide.fade#haber
		div.modal-body
			div.row-fluid(style="min-height:150px;")
				div.span5#resimsec
					
				div.span7
					label(for="txt_title") 
						strong İçerik Başlığı
					input.span12#txt_title 
					label 
						strong İçerik Türleri :
					div#kategoricontainer		
						- ubsoptions.categories.forEach(function(itm){
							label(style="float:left;margin-right:5px;")
								input(type="checkbox",style="margin-top:0px;",value=itm) 
								span.lbl(style="margin-left:2px;") #{itm}
						- })	
			div.row-fluid(style="margin-top:10px;")		
				div.span12
					label(for="txt_metin") 
						strong İçerik Metni
					textarea.span12(style="min-height:200px")#txt_metin
					
		div.modal-footer
			a.btn(href="javascript:$('#haber').modal('hide');") Vazgeç
			a.btn.btn-success(href="javascript:save()") Kaydet	
block scripts
	script(src='/adm/files/jq.Jcrop.min.js',type="text/javascript")
	script(src='/adm/files/newslist.js',type="text/javascript")
		
block styles
	link(rel='stylesheet', href='/adm/files/jq.Jcrop.min.css')